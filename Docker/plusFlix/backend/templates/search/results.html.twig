{% block title %}Wyniki wyszukiwania{% endblock %}

{% block body %}

<div class="search-results-container">

    <aside class="filters-panel">
        <h3>Filtry</h3>

        <form method="get" action="{{ path('search_results') }}" id="filters-form">
            <input type="hidden" name="q" value="{{ query }}">

            <div class="filter-group">
                <label>Typ</label>
                <select name="type">
                    <option value="">Wszystkie</option>
                    <option value="1" {% if selectedType == '1' %}selected{% endif %}>Film</option>
                    <option value="2" {% if selectedType == '2' %}selected{% endif %}>Serial</option>
                </select>
            </div>

            <div class="filter-group">
                <label>Rok produkcji</label>
                <select name="year_range">
                    <option value="">Dowolny</option>
                    <option value="2020+"        {% if selectedYearRange == "2020+" %}selected{% endif %}>2020+</option>
                    <option value="2010-2019"    {% if selectedYearRange == "2010-2019" %}selected{% endif %}>2010–2019</option>
                    <option value="2000-2009"    {% if selectedYearRange == "2000-2009" %}selected{% endif %}>2000–2009</option>
                    <option value="1990-1999"    {% if selectedYearRange == "1990-1999" %}selected{% endif %}>1990-1999</option>
                    <option value="1980-1989"    {% if selectedYearRange == "1980-1989" %}selected{% endif %}>1980-1989</option>
                    <option value="1970-1979"    {% if selectedYearRange == "1970-1979" %}selected{% endif %}>1970-1979</option>
                </select>
            </div>

            <div class="filter-group">
                <label>Autor</label>
                <select name="director">
                    <option value="">Dowolny</option>
                    {% for director in authors %}
                        <option value="{{ director }}" {% if director == selectedDirector %}selected{% endif %}>
                            {{ director }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="dropdown-checkbox">
                <label>Tagi</label>
                <button type="button" class="dropdown-btn">Wszystkie</button>
                <div class="dropdown-content">
                    {% for tag in tags %}
                        <label class="checkbox-option">
                            <input
                                type="checkbox"
                                name="tags[]"
                                value="{{ tag.id }}"
                                {% if selectedTags is defined and tag.id in selectedTags %}checked{% endif %}
                            >
                            {{ tag.tagName }}
                        </label>
                    {% endfor %}
                </div>
            </div>

            <div class="filter-group">
                <label>Kategorie</label>
                <select name="category">
                    <option value="">Dowolne</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}" {% if category.id == selectedCategory %}selected{% endif %}>
                            {{ category.genre }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="filter-group">
                <button type="submit">Gotowe</button>
                <button type="button" id="clear-filters">Wyczyść</button>
            </div>
        </form>
    </aside>

    <script>
        document.getElementById('clear-filters').addEventListener('click', function() {
            const form = this.closest('form');
            const selects = form.querySelectorAll('select');
            selects.forEach(select => select.value = '');
            const tagCheckboxes = form.querySelectorAll('input[name="tags[]"]');
            tagCheckboxes.forEach(cb => cb.checked = false);
        });
    </script>

    <main class="results-main">

        <div class="results-header">
            <div class="query-container">
                <h2>Wyniki wyszukiwania dla: <span class="query">{{ query }}</span></h2>
                {% if query %}
                    <button id="clear-query-btn" title="Usuń zapytanie" >×</button>
                {% endif %}
            </div>

            <div class="sort-box">
                <label><h2>Sortuj wg: </h2></label>
                <select name="sort" form="filters-form" onchange="this.form.submit()">
                    <option value="popularity"  {{ sort == 'popularity'  ? 'selected' }}>Popularność</option>
                    <option value="alpha"       {{ sort == 'alpha'       ? 'selected' }}>Alfabetycznie</option>
                    <option value="year_desc"   {{ sort == 'year_desc'   ? 'selected' }}>Rok produkcji (najnowsze)</option>
                </select>
            </div>
        </div>

        <div class="results-grid">
            {% for item in results %}
                <div class="result-card">
                    <button class="fav-btn" data-id="{{ item.id }}">★</button>

                    <a href="{{ path('item_detail', {'id': item.id}) }}">
                        <div class="poster-wrapper">
                            <img src="https://tvod.iat.pl/view/img/notfound_portrait.jpg" class="poster">

                            <div class="streaming-icons">
                                {% for streaming in item.streamings %}
                                    {% set data = STREAMING_DATA_BY_ID[streaming.id] ?? null %}
                                    {% if data %}
                                        {% include 'components/streaming_logo.html.twig' with {
                                            name: data.name,
                                            logo: data.logo,
                                            link: data.link
                                        } %}
                                    {% endif %}
                                {% endfor %}
                            </div>


                        </div>

                        <div class="info">
                            <h4 class="title">{{ item.name }}</h4>
                            <p class="meta">
                                {% if item.type == 1 %}
                                    Film
                                {% elseif item.type == 2 %}
                                    Serial
                                {% else %}
                                    Inne
                                {% endif %}
                                | {{ item.year }}
                            </p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>


    </main>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const clearBtn = document.getElementById('clear-query-btn');
    if (clearBtn) {
        clearBtn.addEventListener('click', () => {
            const url = new URL(window.location.href);
            url.searchParams.delete('q'); // remove query param
            window.location.href = url.toString();
        });
    }
});
</script>

{% block javascript %}
    <script src="{{ asset('js/favorites.js') }}"></script>
{% endblock %}

{% endblock %}
