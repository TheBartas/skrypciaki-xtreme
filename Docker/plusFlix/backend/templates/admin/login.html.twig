{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .admin-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 16px;
        }
        .admin-form {
            margin: 0 auto;
            background: #f0f0f0;
            padding: 20px;
        }
        .admin-form input {
            width: 100%;
            padding: 8px;
            margin: 8px 0;
            box-sizing: border-box;
        }
        .admin-form button {
            padding: 10px;
            width: 100%;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .admin-error {
            color: red;
            text-align: center;
        }
    </style>

    <div class="admin-wrapper">
        <div style="width: 100%; max-width: 280px;">
            <h2>Admin login</h2>

            {% if error %}
                <p class="admin-error">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </p>
            {% endif %}

            <form action="{{ path('admin_login') }}" method="post" class="admin-form">
                <label for="username">Username:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required>

                <label for="password">Password:</label>
                <input type="password" id="password" name="_password" required>

                <button type="submit">Login</button>
            </form>

        </div>
    </div>
{% endblock %}
